{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>descope/renovate-config"
  ],
  "rangeStrategy": "widen",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.*\\.py/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[^\\s]+?) packageName=(?<packageName>[^\\s]+?)\\s+\\w+?_VERSION[ ]?=[ ]?[\"']?(?<currentValue>.+?)[\"']?\\s"
      ]
    }
  ]
}
